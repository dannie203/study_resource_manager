{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",                         
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],  
    "paths": {
      "*": ["../../node_modules/*", "*"]   
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
